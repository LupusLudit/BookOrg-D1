<Window x:Class="BookOrg.Src.UI.ConnectionWindow.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookOrg.Src.UI.ConnectionWindow"
        mc:Ignorable="d"
        Title="BookOrg"
        Height="300"
        Width="400"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock x:Name="StatusText" Text="Connecting to the database..." Margin="0,0,0,10" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <ProgressBar x:Name="ConnectionProgressBar" Width="375" Height="30" IsIndeterminate="True"/>

            <StackPanel x:Name="ActionButtons" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Visibility="Collapsed">
                <Button Content="Reload" Click="ReloadClick" Width="100" Margin="0,0,10,0" Height="30" Style="{StaticResource BlueButtonStyle}"/>
                <Button Content="Close" Click="CloseClick" Width="100" Height="30" Style="{StaticResource RedButtonStyle}"/>
            </StackPanel>

            <TextBlock Margin="0,40,0,10" FontSize="20" HorizontalAlignment="Center">
                    Using the App.config configuration file.
            </TextBlock>

            <TextBlock FontSize="15" HorizontalAlignment="Center" Foreground="#e81239">
                make sure to adjust the file before attempting to connect
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>