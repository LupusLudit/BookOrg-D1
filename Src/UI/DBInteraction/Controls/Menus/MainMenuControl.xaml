<UserControl x:Class="BookOrg.Src.UI.DBInteraction.Controls.Menus.MainMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookOrg.Src.UI.DBInteraction.Controls.Menus"
             mc:Ignorable="d" >
    <Grid Background="#fff">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Book Org Library Management" FontSize="32" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#333"/>

            <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">

                <Button Content="Authors" Tag="Author" Click="NavigateClick" Background="#90ee90" Foreground="#000" Style="{StaticResource MenuButtonStyle}"/>

                <Button Content="Genres" Tag="Genre" Click="NavigateClick" Background="#add8e6" Foreground="#000" Style="{StaticResource MenuButtonStyle}"/>

                <Button Content="Books" Tag="Book" Click="NavigateClick" Background="#ff5a1b" Foreground="#000" Style="{StaticResource MenuButtonStyle}"/>

                <Button Content="Customers" Tag="Customer" Click="NavigateClick" Background="#ffffa1" Foreground="#000" Style="{StaticResource MenuButtonStyle}"/>

                <Button Content="Loans" Tag="Loan" Click="NavigateClick" Background="#e6e6fa" Foreground="#000" Style="{StaticResource MenuButtonStyle}"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
